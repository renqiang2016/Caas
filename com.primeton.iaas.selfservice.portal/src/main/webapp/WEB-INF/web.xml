<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="operation" version="2.5">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
				classpath:applicationContext.xml,
				classpath:datasource.xml
		</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>resteasy.resources</param-name>
    <param-value>
	  		 com.primeton.iaas.selfservice.portal.permission.user.controller.UserController
	  		 ,com.primeton.iaas.selfservice.portal.permission.role.controller.RoleController
	  		 ,com.primeton.iaas.selfservice.portal.permission.function.controller.FunctionController
	  		 ,com.primeton.iaas.selfservice.portal.permission.menu.controller.MenuController
	  		 ,com.primeton.iaas.selfservice.portal.order.controller.OrderController
	  		 ,com.primeton.iaas.selfservice.portal.caas.namespaces.controller.NamespaceController
	  		 ,com.primeton.iaas.selfservice.portal.caas.pods.controller.PodController
	  		 ,com.primeton.iaas.selfservice.portal.caas.nodes.controller.NodeController
	  		 ,com.primeton.iaas.selfservice.portal.caas.replicationControllers.controller.ReplicationsController
	  		 ,com.primeton.iaas.selfservice.portal.caas.services.controller.ServiceController
	  		 ,com.primeton.iaas.selfservice.portal.caas.endpoints.controller.EndPointController
	  		 ,com.primeton.iaas.selfservice.portal.caas.events.controller.EventController
	  </param-value>
  </context-param>
  <context-param>
    <param-name>resteasy.injector.factory</param-name>
    <param-value>com.primeton.components.rest.extend.JSONInjectorFactoryImpl</param-value>
  </context-param>
  <context-param>
    <param-name>resteasy.servlet.mapping.prefix</param-name>
    <param-value>/rest</param-value>
  </context-param>
  <servlet>
    <servlet-name>rest</servlet-name>
    <servlet-class>
		org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
	</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>rest</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UploadHandleServlet</display-name>
    <servlet-name>UploadHandleServlet</servlet-name>
    <servlet-class>com.primeton.iaas.selfservice.portal.caas.replicationControllers.controller.UploadHandleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadHandleServlet</servlet-name>
    <url-pattern>/UploadHandleServlet</url-pattern>
  </servlet-mapping>
</web-app>